<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:stretchColumns="0,1,2"
    android:background="@drawable/background"
>

	<ImageView
		android:id="@+id/logo_devider"
		android:src="@drawable/divider" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
	/>

	<TableRow>
		<TextView 
			android:text="@string/header"
			android:textColor="@android:color/black"
			android:textStyle="bold"
			android:textSize="13dp"
			android:layout_span="3"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
		/>
	</TableRow>

	<ImageView
		android:id="@+id/logo_devider"
		android:src="@drawable/divider" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
	/>

		<TableRow 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:weightSum="1"
		>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_connect" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_connect"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="3dp"
				    android:text="@string/connect_to"
				    android:textColor="@android:color/black"
				    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_operation" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_refund"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>
				<TextView 
						android:id="@+id/o_operation_label"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/refund"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_last_transaction" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_last_transaction"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>
				<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/payments_history"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
		</TableRow>
		<TableRow 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:weightSum="1"
		>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_settings" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_settings"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>
				<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/settings"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_faq" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_faq"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>
				<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/faq"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_about" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:clickable="true"
						android:src="@drawable/icon_about"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:scaleType="center"
				/>
				<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/about"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>			
		</TableRow>
		<TableRow 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:weightSum="1"
		>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_calculator" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_calculator"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>
				<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/calulator"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
			<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="0.33" 
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:gravity="center_horizontal"
			>
				<ImageView android:id="@+id/o_logout" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/button_options_selector"
						android:src="@drawable/icon_logout"
						android:scaleType="center"
						android:paddingRight="2dp"
						android:paddingBottom="2dp"
						android:clickable="true"
				/>
				<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="@string/logout"
						android:textColor="@android:color/black"
						android:layout_marginTop="3dp"
					    android:gravity="center_horizontal" 
				/>
			</LinearLayout>
		
		</TableRow>
</TableLayout>