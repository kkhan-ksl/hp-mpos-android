<resources xmlns:android="http://schemas.android.com/apk/res/android">
<!-- pager -->
	<style name="HandpointLogoStyle">
        <item name="android:padding">7dp</item>
	</style>
<!-- end -->

    <style name="TextLcdStyle">
        <item name="android:textSize">40dp</item>
    </style>

<!-- numpad view -->
    <style name="NumpadButtonsTextStyle">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/numpadButtonTextColor</item>
        <item name="android:gravity">center</item>
		<item name="android:padding">0dp</item>
		<item name="android:layout_margin">0dp</item>
    </style>
    <style name="DescriptionInput" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">80dp</item>
	</style>
<!-- end -->

    <style name="ButtonStyle">
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">35dp</item>
		<item name="android:shadowDx">-2</item>
		<item name="android:shadowDy">-3</item>
		<item name="android:shadowRadius">0.7</item>
	</style>
    <style name="OrangeButtonStyle" parent="ButtonStyle">
		<item name="android:shadowColor">@color/orangeShadowColor</item> 
		<item name="android:textColor">@android:color/white</item>
	</style>
    <style name="RedButtonStyle" parent="ButtonStyle">
		<item name="android:shadowColor">@android:color/black</item> 
		<item name="android:textColor">@android:color/white</item>
	</style>
    <style name="GreyButtonStyle" parent="ButtonStyle">
		<item name="android:shadowColor">@android:color/black</item> 
		<item name="android:textColor">@android:color/white</item>
	</style>

<!-- recipt view -->	
	<style name="ThanksHeaderStyle">
		<item name="android:textSize">22dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">6dp</item>
	</style>

	<style name="MerchantNameStyle">
	    <item name="android:textSize">22dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">6dp</item>
	</style>

	<style name="MerchantAddressStyle">
	    <item name="android:textSize">22dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">17dp</item>
	</style>

	<style name="DateStyle">
		<item name="android:textSize">22dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:layout_width">wrap_content</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">17dp</item>
	</style>

	<style name="AmountStyle">
		<item name="android:textSize">35dp</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">10dp</item>
	</style>
	
	<style name="receiptCardLogoStyle">
		<item name="android:layout_height">70dp</item>
		<item name="android:layout_width">70dp</item>
		<item name="android:scaleType">fitXY</item>
	</style>
	
	<style name="ItemDescriptionStyle">
	    <item name="android:textSize">18dp</item>
		<item name="android:padding">0dp</item>
		<item name="android:layout_width">152dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="PictureStyle">
		<item name="android:layout_height">118dp</item>
		<item name="android:layout_width">118dp</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:padding">4dp</item>
	</style>
<!-- end -->

<!-- signature view -->
	<style name="CrossButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
	</style>

	<style name="DividerSignatureStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginBottom">50dp</item>
	</style>

	<style name="SignatureTextStyle">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">20dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginTop">-47dp</item>
	</style>

	<style name="SignatureButtonStyle">
		<item name="android:textSize">30dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">0dp</item>
	    <item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
	    <item name="android:layout_gravity">center_vertical</item>
	    <item name="android:shadowDx">-1</item>
		<item name="android:shadowDy">-2</item>
		<item name="android:shadowRadius">0.7</item>
	</style>
<!-- end -->
</resources>
